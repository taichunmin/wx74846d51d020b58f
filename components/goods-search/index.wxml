<view class="container">
    <view class="topLine"></view>
    <view class="empty-block"></view>
    <view class="input_search_bar">
        <view class="within-block">
            <view class="search-icon-block">
                <icon class="searchIcon"></icon>
            </view>
            <view class="search-input-block">
                <input bindinput="inputTyping" class="input_search_bar_input" placeholder="搜索" type="text" value="{{inputVal}}"></input>
            </view>
            <view bindtap="clear" class="clear-icon-block" wx:if="{{inputVal!=''}}">
                <icon size="18" type="clear"></icon>
            </view>
        </view>
    </view>
    <view class="empty-block"></view>
</view>
