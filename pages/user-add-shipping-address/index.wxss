.topLine {
    background: rgba(0,0,0,.1);
    height: 2rpx;
    width: 100%;
}

.block {
    display: flex;
    flex: 1;
    flex-direction: column;
    margin: 40rpx auto 0;
    width: 95%;
}

.title {
    color: #333;
    font-size: 24rpx;
    font-weight: 700;
    padding-left: 8rpx;
}

.input-block,.title {
    display: flex;
    flex-direction: row;
}

.input-block {
    align-items: center;
    height: 96rpx;
    justify-content: center;
}

.input-block,.ship-to-address-block {
    background: #f9f9f9;
    border: 1px solid #f6f6f6;
    border-radius: 12rpx 12rpx 12rpx 12rpx;
    color: #a8a8a8;
    font-size: 26rpx;
    margin-top: 24rpx;
}

.ship-to-address-block {
    display: flex;
    flex-direction: row;
}

.ship-to-address {
    font-size: 26rpx;
    height: 200rpx;
    overflow: hidden;
}

.ship-to-address-input {
    box-sizing: border-box;
    color: #333;
    height: 200rpx;
    padding: 36rpx 24rpx 0rpx;
    width: 99%;
}

.input {
    color: #333;
    height: 100%;
    padding-left: 12rpx;
    width: 100%;
}

.line {
    margin: 40rpx auto 0;
    width: 95%;
}

.intelligent-filling-block {
    background: #f9f9f9;
    border: 1px solid #f6f6f6;
    border-radius: 12rpx 12rpx 12rpx 12rpx;
    display: flex;
    flex: 1;
    flex-direction: column;
    font-size: 26rpx;
    height: 200rpx;
    margin-top: 24rpx;
    overflow: hidden;
    width: 100%;
}

.text-icon-block {
    display: flex;
    flex-direction: row;
}

.intelligent-filling-input {
    color: #a8a8a8;
    height: 110rpx;
    margin: auto;
    padding: 36rpx 24rpx 0rpx 5rpx;
    width: 90%;
}

.distinguish-block {
    height: 70rpx;
    margin-bottom: 15rpx;
    margin-top: 5rpx;
    text-align: end;
}

.switch-container {
    align-items: center;
    display: flex;
    flex: 1;
    flex-direction: row;
    justify-content: center;
}

.switch-left-text {
    color: #333;
    flex: 0.9;
    font-size: 30rpx;
    font-weight: 400;
    padding-left: 10rpx;
}

.switch,.switch-left-text {
    display: flex;
}

.switch {
    flex: 0.1;
    padding-top: 10rpx;
}

.input-del {
    margin: 0rpx 20rpx 0rpx 0rpx;
}

.intelligent-filling {
    margin: 36rpx 22rpx 0rpx 0rpx;
}

.delete-save-btn-block {
    display: flex;
    flex: 1;
    flex-direction: row;
    margin-bottom: 50rpx;
    margin-top: 150rpx;
}

@media screen and (max-width:375px) {
    .delete-save-btn-block {
        display: flex;
        flex: 1;
        flex-direction: row;
        margin-bottom: 50rpx;
        margin-top: 130rpx;
    }
}

.delete-btn-block {
    padding-left: 15rpx;
}

.delete-btn-block,.save-btn-block {
    display: flex;
    flex: 1;
    flex-direction: row;
}

.save-btn-block {
    padding-right: 15rpx;
}

.btn-public-style {
    align-items: center;
    border-radius: 20px 20px 20px 20px;
    display: flex;
    font-size: 30rpx;
    height: 40px;
    justify-content: center;
    width: 85%;
}

.delete-btn {
    background: #fff;
    border: 1px solid #6e7480;
    color: #666;
}

.save-btn {
    background: #f5a200;
    border: 1px solid #f5a200;
    color: #fff;
}

button[disabled]:not([type]) {
    background: #f5a200;
    border-radius: 20px 20px 20px 20px;
    color: #fff;
    font-size: 30rpx;
    height: 40px;
    opacity: .4;
    width: 85%;
}

button::after {
    border: none;
}