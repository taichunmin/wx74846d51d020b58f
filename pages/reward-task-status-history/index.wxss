.topLine {
    background: rgba(0,0,0,.1);
    height: 2rpx;
    width: 100%;
}

.noData {
    margin-top: 354rpx;
    position: absolute;
}

.noData,.noDataImgBlock {
    text-align: center;
    width: 100%;
}

.noDataImgBlock {
    height: auto;
}

.noDataImg {
    height: 300rpx;
    width: 300rpx;
}

.noDataText {
    color: #a8a8a8;
    font-size: 30rpx;
    font-weight: 500;
    margin-top: 30rpx;
    text-align: center;
    width: 100%;
}

page {
    background: #f9f9f9;
    height: 100%;
    width: 100%;
}

.content {
    background: #fff;
    height: auto;
    width: 100%;
}

.block {
    border-bottom: 1px solid #f6f6f6;
    display: flex;
    flex: 1;
    flex-direction: column;
    margin: 0rpx 40rpx;
    padding-bottom: 18rpx;
    padding-top: 28rpx;
}

.first-block,.remain {
    display: flex;
    flex: 0.5;
    flex-direction: row;
}

.remain {
    align-items: center;
    background: #fef6e6;
    color: #f5a200;
    font-size: 24rpx;
    height: 48rpx;
    margin-top: 10rpx;
    padding: 12rpx 20rpx;
}

.left-block {
    flex: 0.4;
    flex-direction: row;
}

.left-block,.outside-block {
    display: flex;
}

.outside-block {
    flex-direction: column;
}

.title {
    color: #333;
    font-size: 30rpx;
    font-weight: 700;
    letter-spacing: 2rpx;
}

.time,.title {
    display: flex;
    flex: 0.5;
}

.time {
    color: #999;
    font-size: 24rpx;
    font-weight: 400;
    margin-top: 10rpx;
}

.right-block {
    align-items: center;
    display: flex;
    flex: 0.6;
    flex-direction: row;
    justify-content: flex-end;
}

.under_review {
    color: #f5a200;
    font-size: 26rpx;
}

.completed {
    color: #999;
    font-size: 26rpx;
}

.no-pass {
    color: #f56311;
    font-size: 26rpx;
}