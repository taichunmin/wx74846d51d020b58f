page {
    background: #131418;
}

.wrap {
    height: 100%;
    overflow: auto;
    width: 100%;
}

.top {
    flex: 1;
    flex-direction: row;
    height: 90%;
    margin-top: 64rpx;
    overflow-x: hidden;
    overflow-y: auto;
    width: 100%;
}

#left-icon-block,.top {
    display: flex;
}

#left-icon-block {
    flex: 0.15;
    flex-direction: column;
    height: min-content;
}

#left-icon-block,#textarea-block {
    align-items: center;
}

#textarea-block {
    display: flex;
    flex: 0.85;
    flex-direction: column;
    overflow-x: hidden;
    overflow-y: auto;
}

.icon-outside-block {
    line-height: 50rpx;
}

.right {
    background: url("data:image/svg+xml;base64,");
    background-size: 30rpx 30rpx;
}

.error,.right {
    height: 30rpx;
    width: 30rpx;
}

.error {
    background: url("data:image/svg+xml;base64,");
    background-size: 30rpx 30rpx;
}

.text-area {
    border-radius: 12rpx 12rpx 0rpx 0rpx;
    color: #f5f5f5;
    display: flex;
    font-size: 28rpx;
    line-height: 50rpx;
    margin: 0rpx 24rpx;
    overflow: hidden;
    overflow-x: hidden;
    overflow-y: auto;
    padding-right: 130rpx;
    text-align: right;
    width: 100%;
}

.btn-block {
    bottom: 100rpx;
    position: fixed;
    text-align: center;
    width: 100%;
}

.data-block {
    margin: 10rpx 0rpx 0rpx 10rpx;
}