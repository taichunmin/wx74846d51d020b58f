.page-base-container,page {
    height: 100%;
    width: 100%;
}

.page-base-container {
    box-sizing: border-box;
    padding-top: 26%;
}

.page-fw-base-container {
    align-items: center;
    display: flex;
    flex-direction: column;
    width: 100%;
}

.img-deivce-fw-updatable {
    background: url("data:image/svg+xml;base64,");
    background-position: 50%;
    background-repeat: no-repeat;
    background-size: contain;
    height: 300rpx;
    width: 300rpx;
}

.deivce-fw-status-container {
    align-items: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin-top: 28rpx;
    width: 100%;
}

.txt-device-fw-status {
    color: #333;
    font-size: 30rpx;
    font-weight: 700;
    text-align: center;
}

.txt-device-fw-version {
    color: #666;
    font-size: 26rpx;
    font-weight: 500;
    line-height: 26rpx;
    margin-top: 20rpx;
}

.btn-start-fw-update {
    background: #f5a200;
    border-radius: 40rpx;
    color: #fff;
    font-size: 30rpx;
    font-weight: 500;
    line-height: 26rpx;
    margin-top: 58rpx;
    opacity: 1;
    padding: 24rpx 100rpx;
}

button::after {
    border: none;
}

.btn-start-fw-update-hover {
    background: #d48e00;
}

.container-progress {
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    margin-top: 40rpx;
    width: 480rpx;
}

.progress-bar-box {
    background: #ebedf0;
    border-radius: 20rpx;
    height: 8rpx;
}

.progress-bar-in {
    background: #f5a200;
    border-radius: 20rpx;
    height: 8rpx;
    transition: all 2s ease 0s;
    width: 1rpx;
}

.fw-update-note-container {
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    margin-top: 128rpx;
    padding-left: 80rpx;
    width: 100%;
}

.fw-update-note-title {
    color: #333;
    font-size: 28rpx;
    font-weight: 700;
    line-height: 28rpx;
}

.fw-update-note-item-container {
    display: flex;
    flex-direction: column;
    margin-top: 20rpx;
    width: 100%;
}

.fw-update-note-item {
    color: #757875;
    font-size: 28rpx;
    font-weight: 400;
    line-height: 28rpx;
    margin-top: 16rpx;
}