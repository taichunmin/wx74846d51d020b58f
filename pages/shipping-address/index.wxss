.topLine {
    background: rgba(0,0,0,.1);
    height: 2rpx;
    width: 100%;
}

.wrap {
    height: 100%;
    position: absolute;
    width: 100%;
}

.top-block {
    height: 86%;
    overflow-y: auto;
    width: 100%;
}

.bottom-block {
    margin-top: 50rpx;
    width: 100%;
}

.outside-block {
    flex-direction: column;
    overflow-y: auto;
    width: 100%;
}

.inside-block,.outside-block {
    display: flex;
}

.inside-block {
    flex: 1;
    flex-direction: row;
}

.inside-block-no-choose {
    padding: 34rpx 28rpx 28rpx 40rpx;
}

.inside-block-choose {
    padding: 34rpx 28rpx 28rpx 20rpx;
}

.line {
    background: #f9f9f9;
    height: 16rpx;
    width: 100%;
}

.radio-block {
    align-items: center;
    display: flex;
    justify-content: center;
}

.rightArrowImg {
    transform: scale(.8);
}

.left-block {
    flex: 0.9;
    flex-direction: column;
}

.info-block,.left-block {
    display: flex;
}

.info-block {
    align-items: center;
}

.name {
    color: #333;
    font-size: 30rpx;
    font-weight: 700;
}

.phone {
    color: #666;
    font-size: 26rpx;
    margin-left: 20rpx;
}

.default-text {
    background: #f5a200;
    color: #fff;
    font-size: 18rpx;
    margin-left: 14rpx;
    padding: 3rpx 5rpx;
}

.address {
    color: #999;
    font-size: 26rpx;
    margin-top: 24rpx;
}

.right-block {
    align-items: center;
    display: flex;
    flex: 0.1;
    flex-direction: row;
    justify-content: flex-end;
}

.edit {
    background: url("data:image/svg+xml;base64,");
    background-size: 30rpx 30rpx;
    height: 30rpx;
    width: 30rpx;
}

.add-address-btn {
    background: #f5a200;
    border-radius: 40rpx 40rpx 40rpx 40rpx;
    color: #fff;
    font-size: 30rpx;
    height: 80rpx;
    width: 80%;
}

button::after {
    border: none;
}

.none-address-block {
    align-items: center;
    display: flex;
    flex-direction: column;
    height: 86%;
    justify-content: center;
    width: 100%;
}

.address-icon {
    background: url("data:image/svg+xml;base64,");
    background-size: 156rpx 180rpx;
    height: 180rpx;
    width: 156rpx;
}

.none-address-text {
    color: #a8a8a8;
    font-size: 30rpx;
    font-weight: 500;
    margin-top: 34rpx;
}